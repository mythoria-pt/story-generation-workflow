{
  "name": "story-generation-workflow",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx -r dotenv/config ./src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "docker:build": "docker build -t story-generation-workflow .",
    "docker:run": "docker run -p 8080:8080 story-generation-workflow",
    "deploy": "powershell -ExecutionPolicy Bypass -File .\\scripts\\deploy.ps1",
    "deploy:fast": "powershell -ExecutionPolicy Bypass -File .\\scripts\\deploy-simple.ps1",
    "setup-secrets": "powershell -ExecutionPolicy Bypass -File .\\scripts\\setup-secrets.ps1",
    "check-secrets": "powershell -ExecutionPolicy Bypass -File .\\scripts\\check-secrets.ps1",
    "verify": "powershell -ExecutionPolicy Bypass -File .\\scripts\\verify-setup.ps1",
    "env:validate": "tsx src/config/validate-env.ts",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.14.0",
    "@google-cloud/workflows": "^4.2.0",
    "@google/generative-ai": "^0.24.1",
    "@types/pg": "^8.15.2",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.43.1",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "openai": "^5.5.1",
    "pg": "^8.16.0",
    "puppeteer-html-pdf": "^4.0.8",
    "winston": "^3.11.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.9",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
