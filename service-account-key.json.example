# Google Cloud IAM Service Account for Story Generation Workflow

# This file would contain your service account JSON key for local development
# DO NOT commit this file to version control

# For production deployments, use Cloud Run's built-in service account
# or attach a custom service account with the following permissions:

# Required IAM roles:
# - Cloud Run Developer
# - Workflows Editor  
# - Vertex AI User
# - Storage Object Admin
# - Cloud SQL Client (if using Cloud SQL)

# Example service account creation:
# gcloud iam service-accounts create story-generation-workflow \
#   --description="Service account for Story Generation Workflow" \
#   --display-name="Story Generation Workflow"

# Grant required roles:
# gcloud projects add-iam-policy-binding PROJECT_ID \
#   --member="serviceAccount:story-generation-workflow@PROJECT_ID.iam.gserviceaccount.com" \
#   --role="roles/run.developer"

{
  "type": "service_account",
  "project_id": "your-project-id",
  "private_key_id": "key-id",
  "private_key": "-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n",
  "client_email": "story-generation-workflow@your-project-id.iam.gserviceaccount.com",
  "client_id": "client-id",
  "auth_uri": "https://accounts.google.com/o/oauth2/auth",
  "token_uri": "https://oauth2.googleapis.com/token",
  "auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs",
  "client_x509_cert_url": "https://www.googleapis.com/robot/v1/metadata/x509/story-generation-workflow%40your-project-id.iam.gserviceaccount.com"
}
